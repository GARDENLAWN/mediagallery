<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="gardenlawn_mediagallery" resource="default" engine="innodb" comment="Media Gallery">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="text" name="name" nullable="true" comment="Name"/>
        <column xsi:type="int" name="sortorder" unsigned="true" nullable="false" identity="false" default="0" comment="SortOrder"/>
        <column xsi:type="boolean" name="enabled" nullable="false" default="1" comment="Enabled"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="gardenlawn_mediagallery_asset_link" resource="default" engine="innodb" comment="Link between Media Gallery and Assets">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="int" name="gallery_id" unsigned="true" nullable="false" comment="Media Gallery ID"/>
        <column xsi:type="int" name="asset_id" unsigned="true" nullable="false" comment="Media Gallery Asset ID"/>
        <column xsi:type="int" name="sortorder" unsigned="true" nullable="false" default="0" comment="Sort Order"/>
        <column xsi:type="boolean" name="enabled" nullable="false" default="1" comment="Enabled"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="GARDENLAWN_MEDIAGALLERY_ASSET_LINK_PK">
            <column name="gallery_id"/>
            <column name="asset_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="GARDENLAWN_MDAGLR_ASSET_LNK_ASSET_ID_MDA_GLR_ASSET_ID"
                    table="gardenlawn_mediagallery_asset_link"
                    column="asset_id"
                    referenceTable="media_gallery_asset"
                    referenceColumn="id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign"
                    referenceId="GARDENLAWN_MDAGLR_ASSET_LNK_GLR_ID_GARDENLAWN_MDAGLR_ID"
                    table="gardenlawn_mediagallery_asset_link"
                    column="gallery_id"
                    referenceTable="gardenlawn_mediagallery"
                    referenceColumn="id"
                    onDelete="CASCADE"/>
    </table>
</schema>
