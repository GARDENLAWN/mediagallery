<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="gardenlawn_mediagallery" resource="default" engine="innodb" comment="Media Gallery">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="text" name="name" nullable="true" comment="Name"/>
        <column xsi:type="int" name="sortorder" unsigned="true" nullable="false" identity="false" default="0" comment="SortOrder"/>
        <column xsi:type="boolean" name="enabled" nullable="false" default="1" comment="Enabled"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
