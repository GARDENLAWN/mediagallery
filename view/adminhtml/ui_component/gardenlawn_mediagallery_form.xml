<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">gardenlawn_mediagallery_form.gardenlawn_mediagallery_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Gallery Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="GardenLawn\MediaGallery\Block\Adminhtml\Edit\BackButton"/>
            <button name="delete" class="GardenLawn\MediaGallery\Block\Adminhtml\Edit\DeleteButton"/>
            <button name="reset" class="GardenLawn\MediaGallery\Block\Adminhtml\Edit\ResetButton"/>
            <button name="save" class="GardenLawn\MediaGallery\Block\Adminhtml\Edit\SaveButton"/>
        </buttons>
        <namespace>gardenlawn_mediagallery_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>gardenlawn_mediagallery_form.gardenlawn_mediagallery_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="gardenlawn_mediagallery_form_data_source">
        <dataProvider class="GardenLawn\MediaGallery\Model\DataProvider" name="gardenlawn_mediagallery_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="name" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="sortorder" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Sort Order</label>
            </settings>
        </field>
        <field name="enabled" formElement="checkbox">
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enabled</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="assets">
        <settings>
            <label translate="true">Assets</label>
            <collapsible>true</collapsible>
        </settings>
        <insertListing name="assets_listing">
            <settings>
                <externalProvider>gardenlawn_mediagallery_asset_listing.gardenlawn_mediagallery_asset_listing_data_source</externalProvider>
                <selectionsProvider>gardenlawn_mediagallery_asset_listing.gardenlawn_mediagallery_asset_listing.asset_columns.ids</selectionsProvider>
                <autoRender>true</autoRender>
                <dataScope>links.assets</dataScope>
                <ns>gardenlawn_mediagallery_asset_listing</ns>
                <imports>
                    <link name="gallery_id">${ $.provider }:data.id</link>
                </imports>
                <exports>
                    <link name="gallery_id">${ $.externalProvider }:params.gallery_id</link>
                </exports>
            </settings>
        </insertListing>
    </fieldset>
</form>
