<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <!-- Synchronize S3 assets with the media gallery -->
        <job name="gardenlawn_mediagallery_s3_sync" instance="GardenLawn\MediaGallery\Cron\SyncS3" method="execute">
            <!-- Every day at 3:00 AM -->
            <schedule>0 3 * * *</schedule>
        </job>

        <!-- Link assets to galleries -->
        <job name="gardenlawn_mediagallery_link_assets" instance="GardenLawn\MediaGallery\Cron\LinkAssets" method="execute">
            <!-- Every day at 3:15 AM (runs after S3 sync) -->
            <schedule>15 3 * * *</schedule>
        </job>
    </group>
</config>
