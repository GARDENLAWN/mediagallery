<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="gardenlawnPopulateAssetLinks" xsi:type="object">GardenLawn\MediaGallery\Console\Command\PopulateAssetLinks</item>
            </argument>
        </arguments>
    </type>
    <!-- Register UI data provider collection handle to fix: Not registered handle gardenlawn_mediagallery_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="gardenlawn_mediagallery_listing_data_source" xsi:type="string">GardenLawn\MediaGallery\Model\ResourceModel\Gallery\Collection</item>
                <item name="gardenlawn_mediagallery_asset_link_listing_data_source" xsi:type="string">GardenLawn\MediaGallery\Model\ResourceModel\AssetLink\Collection</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="gardenlawn_mediagallery_listing_data_source" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object">GardenLawn\MediaGallery\Model\ResourceModel\Gallery\Collection</argument>
            <argument name="filterPool" xsi:type="object">GardenLawnMediaGalleryGirdFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="GardenLawnMediaGalleryGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="gardenlawn_mediagallery_asset_link_listing_data_source" type="GardenLawn\MediaGallery\Ui\Component\Listing\AssetLink\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object">GardenLawn\MediaGallery\Model\ResourceModel\AssetLink\Collection</argument>
            <argument name="filterPool" xsi:type="object">GardenLawnMediaGalleryAssetLinkGirdFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="GardenLawnMediaGalleryAssetLinkGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
</config>
